{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.ts",
    "!./src/cli/*.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "errorOnDeprecated": true,
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ]
}
