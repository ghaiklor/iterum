{
  "collectCoverage": false,
  "collectCoverageFrom": [
    "./src/**/*.ts",
    "!./src/cli/iterum.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "errorOnDeprecated": true,
  "maxConcurrency": 10,
  "notify": false,
  "notifyMode": "failure-change",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "verbose": false
}
